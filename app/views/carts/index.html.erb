<% if @cart_items.any? %>
  <% @cart_items.each do |item| %>
    <p><%= item.shoe.name %> | <%= link_to "Delete", cart_item_path(item), :data => {:confirm => "You sure?", :method => "delete"} %></p>
    <p> Unit Price: <%= number_to_currency item.shoe.price, unit: '€' %> | Quantity: <%= item.quantity %> |
       Total Price: <%= number_to_currency (item.shoe.price * item.quantity), unit: '€' %></p>
  <% end %>
  <p>Your Total: <%= current_cart.total %></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
