<% if @cart_items.any? %>
  <% @cart_items.each do |item| %>
    <h2><%= item.shoe.name %></h2>
    <p><%= link_to "Delete", cart_item_path(item),
      method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-info"%></p>
    <p> Price: <%= number_to_currency item.shoe.price, unit: '€' %> | Quantity: <%= item.quantity %> |
       Total Price: <%= number_to_currency (item.shoe.price * item.quantity), unit: '€' %></p>
  <% end %>
<hr />
  <p>Your Total: <%= current_cart.total %></p>
<% else %>
  <p>Your shopping cart is empty.</p>
<% end %>
