<div class="dropdown show">
  <hr>
  <a class="btn btn-success dropdown-toggle"  id="dropdownMenuLink" data-toggle="dropdown"
    aria-haspopup="true" aria-expanded="false">
    Sort
  </a>
<hr>
<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
  <li><a class="dropdown-item" >  <%= link_to "Price Low-High", shoes_path(sort: "price_asc") %></a></li>
  <li><a class="dropdown-item" >  <%= link_to "Price High-Low ", shoes_path(sort: "price_desc") %></a></li>
  <li><a class="dropdown-item" >  <%= link_to "Size Small-Big", shoes_path(sort: "size_asc") %></a></li>
  <li><a class="dropdown-item" >  <%= link_to "Size Big-Small", shoes_path(sort: "size_desc") %></a></li>
</ul>
</div>
<hr>
<div>
<%= form_tag(shoes_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Shoes"%>
<%= submit_tag "Search" %>

<% end %>

</div>
  <section class="gallery">
  <% @shoes.each do |shoe| %>
     <article class="card">
        <div class="img">
          <%= image_tag shoe.photo.image.thumbnail %>
        </div>
        <div class="shoetext">
      <h2 style = "text-decoration: none; text-align:center; "><%= link_to shoe.name, shoe %></h2>
        <p><%= shoe.description %> </p>
        <p id="price">Price:  â‚¬ </h4><%= shoe.price%></p>
  </div>
      </article>
   <% end %>
</section>

